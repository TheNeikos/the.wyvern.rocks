.category
  .category-header
    %h2
      = link_to category.name, category
      - if policy(Topic.new category: category).new?
        .right
          = link_to "New Topic", new_category_topic_path(category), class: "new-topic"

      - unless category.roles.empty?
        %span.label.info.right
          .has-tip{:'data-tooltip' => true, :'aria-haspopup' => true,
                   title: "Visible for: " + category.roles.map{|x| x.name}.join(',')}
            Visiblity
  .row.topic-rows
    .column.small-12
      = render category.topics.limit 5
